<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/movie_list">

    <fragment
        android:id="@+id/add_movie"
        android:name="com.example.movie_tv.data.fragments.add_movie"
        android:label="fragment_add_movie"
        tools:layout="@layout/fragment_add_movie" >
        <action
            android:id="@+id/action_add_movie_to_movie_list"
            app:destination="@id/movie_list" />
    </fragment>
    <fragment
        android:id="@+id/movie_list"
        android:name="com.example.movie_tv.data.fragments.movie_list"
        android:label="fragment_movie_list"
        tools:layout="@layout/fragment_movie_list" >
        <action
            android:id="@+id/action_movie_list_to_add_movie"
            app:destination="@id/add_movie" />
    </fragment>
</navigation>